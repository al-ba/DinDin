<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dm_16_dp">

    <ImageView
        android:id="@+id/order_item_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_food"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_item_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:paddingStart="@dimen/dm_16_dp"
        android:paddingEnd="@dimen/dm_16_dp"
        android:text="Pizza"
        app:layout_constraintBottom_toBottomOf="@id/order_item_image"
        app:layout_constraintLeft_toRightOf="@id/order_item_image"
        app:layout_constraintRight_toLeftOf="@id/order_item_price"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_item_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dm_16_dp"
        android:paddingEnd="@dimen/dm_16_dp"
        android:text="20 $"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="@id/order_item_image"
        app:layout_constraintRight_toLeftOf="@id/order_item_remove"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/order_item_remove"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_order_remove"
        app:layout_constraintBottom_toBottomOf="@id/order_item_image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>